#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:5.0-buster-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:5.0-buster-slim AS build
WORKDIR /src
COPY ["src/services/MED.Identidade.API/MED.Identidade.API.csproj", "src/services/MED.Identidade.API/"]
RUN dotnet restore "src/services/MED.Identidade.API/MED.Identidade.API.csproj"
COPY . .
WORKDIR "/src/src/services/MED.Identidade.API"
RUN dotnet build "MED.Identidade.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "MED.Identidade.API.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "MED.Identidade.API.dll"]